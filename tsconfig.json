{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "./dist/",
    "module": "ES2020",
    "target": "ES2020",
    "sourceMap": false,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": "./"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
